      </div>    
    </div>
     </nav>
    <section class=productwrapsection>
    <h1 class='productTypeHeader'>Current Cocktails</h1> 
    <body class='bodyWrapper'>
        <div class='mainWrap'> 
            each unit in product
                <div class='productWrapper'>
                //- <div class='productImgWrap'><img class=productimg src='/images/drinkscategoryimg.avif'> </div>
                <span class='nameAndPriceFlexWrap'>
                <section class='productNameWrap'>
                    <h2 class='productNameDiv'>#{unit.strainName} #{unit.qty}</h2>
                <div class='thcPercentWrap'>
                    <h3 class='productClassificationDiv'>#{unit.classification}</h3><span class="dot"></span>
                    <h3 class='thcPercentDiv'>$#{unit.price}</h3>                             
                </div>
                <p class='productdescriptions'>
                    |#{unit.topTerpenes}

                </p>
                </section>
                </span>
                </div>
        </div>
    </section>
    </body>
    script(type='text/javascript' src='src/hamburgerMenuScript.js')